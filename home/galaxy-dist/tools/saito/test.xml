<tool id="TOOLS_SAITO_TEST" name="test for saito tools" version="1.0.0">

  <description>using various XML tags</description>

  <command interpreter="perl">test.pl $input1 $input2 $option1 $option2 $output1 $output2</command>

  <inputs>
    <param name="input1" type="data" label="input1 data"/>
    <param name="input2" type="data" label="input2 data"/>
    <param name="option1" type="integer" value="1985" label="option 1 integer"/>
    <param name="option2" type="boolean" truevalue="-d" label="option 2 boolean"/>
  </inputs>

  <outputs>
    <data name="output1" format="tabular" label="output1 tabular"/>
    <data name="output2" format="tabular" label="output2 tabular"/>
  </outputs>

  <help>
This is a test tool.    
  </help>

  <citations>
    <citation type="doi">10.1093/bioinformatics/btq281</citation>
  </citations>

</tool>

